<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/custom_border_white"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/checked"/>
        <CheckBox
            android:id="@+id/checkbox_task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_name_task"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:text="Mẫu"
            android:textSize="18dp"
            android:gravity="center_vertical"/>
        <ImageButton android:id="@+id/img_btn_favorite"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/star_off"
            android:background="#00ffffff"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_check_expired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:text="Nhiệm vụ này quá hạn"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/red"/>
</LinearLayout>