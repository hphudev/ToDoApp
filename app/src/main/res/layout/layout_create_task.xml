<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_sheet_add_task"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="12dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edt_task_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="19dp"
                        android:background="@drawable/custom_input_2"
                        android:drawableStart="@drawable/ic_baseline_add_24"
                        android:focusable="true"
                        android:hint="Nhiệm vụ của bạn"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/btn_create_task"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/blue"
                        android:src="@drawable/ic_baseline_arrow_upward_24"
                        android:text="666 VND" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tv_date_expired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_round"
                        android:drawableStart="@drawable/ic_baseline_schedule_24"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:focusable="true"
                        android:clickable="true"
                        android:text="Đặt ngày đến hạn" />

                    <TextView
                        android:id="@+id/tv_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:background="@drawable/custom_button_round"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_baseline_add_alert_24"
                        android:drawablePadding="5dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Nhắc tôi" />
<!--                    <TextView-->
<!--                        android:id="@+id/tv_repeat"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:background="@drawable/custom_button_round"-->
<!--                        android:drawableStart="@drawable/ic_baseline_repeat_24"-->
<!--                        android:drawablePadding="5dp"-->
<!--                        android:padding="5dp"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:focusable="true"-->
<!--                        android:clickable="true"-->
<!--                        android:text="Lặp lại" />-->
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>