<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/star_on" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/star_on" /> <!-- focused -->
    <item android:state_checked="true"
        android:drawable="@drawable/star_on"/>
    <item android:state_checked="false"
        android:drawable="@drawable/star_off"/>
    <item android:state_hovered="true"
        android:drawable="@drawable/star_on" /> <!-- hovered -->
    <item android:drawable="@drawable/star_off" /> <!-- default -->
</selector>